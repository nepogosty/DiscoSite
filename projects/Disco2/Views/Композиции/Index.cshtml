@model IEnumerable<Disco2.Models.Композиции>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Создать", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Жанр
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Название)
            </th>
            <th>
               Год выпуска
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Жанры.Название)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Название)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Год_выпуска)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.ID_композиции }) |
                @Html.ActionLink("Детали", "Details", new { id = item.ID_композиции }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID_композиции })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
