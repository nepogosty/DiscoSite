@model Disco2.Models.Жанры
@using Disco2.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Жанры</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Название жанра
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Название)
            </dd>
            <dt>
                Композиции
            </dt>

            <dd>
                @foreach (var item in Model.Композиции)
                {
                    @Html.ActionLink(item.Название + " " + item.Год_выпуска + ", ", "Details", "Композиции", new { track = item.Название, id = item.ID_композиции }, new { id = item.ID_композиции, @class = "link" })
                }

            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID_жанра }) |
        @Html.ActionLink("Назад", "Index")
    </p>
</body>
</html>
